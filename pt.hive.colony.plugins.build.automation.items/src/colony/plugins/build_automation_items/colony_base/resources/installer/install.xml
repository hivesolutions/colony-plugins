<installation version="1.0">

	<native type="izpack" name="ShellLink.dll"/>

	<info>
		<appname>Hive Colony Framework</appname>
		<appversion>1.0.0</appversion>
		<authors>
			<author name="Hive Solutions Lda." email="global@hive.pt"/>
		</authors>
		<url>http://www.hive.pt/colony</url>
	</info>

	<!-- the window size information -->
	<guiprefs width="640" height="480" resizable="no"/>

	<!-- the locales to be included -->
	<locale>
		<langpack iso3="eng"/>
		<langpack iso3="por"/>
	</locale>

	<!-- the resources to be included -->
	<resources>
		<res id="LicencePanel.licence" src="build_automation_items/colony_base/resources/installer/license.txt"/>
		<res id="InfoPanel.info" src="build_automation_items/colony_base/resources/installer/readme.txt"/>
		<res src="shortcutSpec.xml" id="build_automation_items/colony_base/resources/installer/shortcutSpec.xml"/>
	</resources>

	<!-- the list of panels to be included in the wizard -->
	<panels>
		<panel classname="HelloPanel"/>
		<panel classname="InfoPanel"/>
		<panel classname="LicencePanel"/>
		<panel classname="TargetPanel"/>
		<panel classname="PacksPanel"/>
		<panel classname="SummaryPanel"/>
		<panel classname="InstallPanel"/>
		<panel classname="ShortcutPanel"/>
		<panel classname="FinishPanel"/>
	</panels>

	<!-- the packs to be used -->
	<packs>
		<pack name="Hive Colony Framework" required="yes">
			<description>The base files for the colony framework</description>
			<file src="build_automation_items" targetdir="$INSTALL_PATH"/>
		</pack>
		<!--<pack name="Console Plugin" required="no">
			<description>The console plugin for simple interaction</description>
			<file src="plugins/main_console" targetdir="$INSTALL_PATH/plugins"/>
			<file src="plugins/main_console_plugin.py" targetdir="$INSTALL_PATH/plugins"/>
		</pack>-->
	</packs>
</installation>
