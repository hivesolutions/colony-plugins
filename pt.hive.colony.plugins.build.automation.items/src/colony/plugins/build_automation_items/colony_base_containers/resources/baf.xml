<build_automation xmlns="http://www.hive.pt"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.hive.pt xsd/baf.xsd">
    <artifact>
        <id>pt.hive.colony.plugins.build.automation.items.colony_base_containers</id>
        <version>1.0.0</version>
        <type>colony</type>
        <name>Colony Base Containers Build Automation Item Plugin</name>
        <description>The build automation item for the base containers of the colony framework</description>
        <url>http://www.hive.pt</url>
    </artifact>
    <modules>
        <module>
            <id>pt.hive.colony.configuration.plugins.all</id>
            <version>.*</version>
        </module>
        <module>
            <id>pt.hive.colony.configuration.plugins.development</id>
            <version>.*</version>
        </module>
    </modules>
    <build>
        <default_stage>build</default_stage>
        <plugins>
            <plugin>
                <id>pt.hive.colony.plugins.build.automation.extensions.packing</id>
                <version>1.0.0</version>
                <stage>build</stage>
                <configuration>
                    <type>plugin</type>
                    <specification_file>$base{plugin_directory}/colony_base_containers_build_automation_item_plugin.json</specification_file>
                </configuration>
            </plugin>
            <plugin>
                <id>pt.hive.colony.plugins.build.automation.extensions.installation</id>
                <version>1.0.0</version>
                <stage>build</stage>
                <configuration>
                    <formats>deb,zip</formats>
                    <base_name>colony-base-containers</base_name>
                    <package>
                        <package_name>colony-base-containers</package_name>
                        <package_version>${build_automation.artifact.version}</package_version>
                        <package_section>devel</package_section>
                        <package_priority>optional</package_priority>
                        <package_architecture>all</package_architecture>
                        <package_essential>no</package_essential>
                        <package_dependencies>colony</package_dependencies>
                        <package_pre_dependencies>bash</package_pre_dependencies>
                        <package_installed_size>0</package_installed_size>
                        <package_maintainer><![CDATA[Hive Solutions Lda. <development@hive.pt>]]></package_maintainer>
                        <package_provides>colony-base-containers</package_provides>
                        <package_description>Base Containers for the Colony Framework</package_description>
                        <parameters>
                            <deb>
                                <postinst>$contents{$base{plugin_directory}/build_automation_items/colony_base_containers/resources/control_files/postinst.sh}</postinst>
                            </deb>
                        </parameters>
                    </package>
                    <contents>
                        <file>
                            <path>${build_automation.build.containers_directory}/pt.hive.colony.configuration.all.format_mime_1.0.0.ccx</path>
                            <owner>0</owner>
                            <group>0</group>
                            <mode>755</mode>
                            <parameters>
                                <deb>
                                    <target>usr/lib/colony/deploy/pt.hive.colony.configuration.all.format_mime_1.0.0.ccx</target>
                                </deb>
                                <zip>
                                    <target>colony/deploy/pt.hive.colony.configuration.all.format_mime_1.0.0.ccx</target>
                                </zip>
                            </parameters>
                        </file>
                        <file>
                            <path>${build_automation.build.containers_directory}/pt.hive.colony.configuration.development.main_console_1.0.0.ccx</path>
                            <owner>0</owner>
                            <group>0</group>
                            <mode>755</mode>
                            <parameters>
                                <deb>
                                    <target>usr/lib/colony/deploy/pt.hive.colony.configuration.development.main_console_1.0.0.ccx</target>
                                </deb>
                                <zip>
                                    <target>colony/deploy/pt.hive.colony.configuration.development.main_console_1.0.0.ccx</target>
                                </zip>
                            </parameters>
                        </file>
                        <file>
                            <path>${build_automation.build.containers_directory}/pt.hive.colony.configuration.development.main_console_interface_1.0.0.ccx</path>
                            <owner>0</owner>
                            <group>0</group>
                            <mode>755</mode>
                            <parameters>
                                <deb>
                                    <target>usr/lib/colony/deploy/pt.hive.colony.configuration.development.main_console_interface_1.0.0.ccx</target>
                                </deb>
                                <zip>
                                    <target>colony/deploy/pt.hive.colony.configuration.development.main_console_interface_1.0.0.ccx</target>
                                </zip>
                            </parameters>
                        </file>
                        <file>
                            <path>${build_automation.build.containers_directory}/pt.hive.colony.configuration.development.main_service_http_1.0.0.ccx</path>
                            <owner>0</owner>
                            <group>0</group>
                            <mode>755</mode>
                            <parameters>
                                <deb>
                                    <target>usr/lib/colony/deploy/pt.hive.colony.configuration.development.main_service_http_1.0.0.ccx</target>
                                </deb>
                                <zip>
                                    <target>colony/deploy/pt.hive.colony.configuration.development.main_service_http_1.0.0.ccx</target>
                                </zip>
                            </parameters>
                        </file>
                    </contents>
                </configuration>
            </plugin>
        </plugins>
    </build>
</build_automation>
