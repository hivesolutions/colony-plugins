<div id="window-captcha" class="window">
    <div class="close-button"></div>
    <h1>Captcha confirmation</h1>
    <p>
        Please fill the box with the word in the image.
    </p>
    <img id="captcha" src="${out_none value=base_path /}captcha" />
    <input type="text" id="captcha" name="captcha" value="Captcha" current_status="" original_value="Captcha" />
    <div class="form-buttons">
        <div id="captcha-refresh" class="button-large">Refresh Captcha</div>
        <div id="post" class="button-large">Confirm</div>
        <div class="clear"></div>
    </div>
</div>
