<repositories xmlns="http://www.hive.pt"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.hive.pt xsd/repositories.xsd">
	<repository>
		<name>Main Repository</name>
		<description>Contains most of the main plugins</description>
		<addresses>
			<address name="Main Address">
				http://latesta.hive/colony/repository
			</address>
			<address name="Chasso Address">
				http://chasso.hive/colony/repository
			</address>
			<address name="Local Address">
				http://localhost/colony/repository
			</address>
			<address name="Example Address">
				http://example.com/colony/repository
			</address>
		</addresses>
	</repository>
	<repository>
		<name>Aux Repository</name>
		<description>
			Contains most of the auxiliary plugins
		</description>
		<addresses>
			<address name="Main Address">
				http://latesta.hive/colony/auxiliary_repository
			</address>
			<address name="Chasso Address">
				http://chasso.hive/colony/auxiliary_repository
			</address>
			<address name="Local Address">
				http://localhost/colony/repository
			</address>
			<address name="Example Address">
				http://example.com/colony/auxiliary_repository
			</address>
		</addresses>
	</repository>
</repositories>
