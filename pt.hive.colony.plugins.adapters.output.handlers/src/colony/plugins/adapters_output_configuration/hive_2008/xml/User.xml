<output_configuration xsi:schemaLocation="http://www.hive.pt ../output_configuration.xsd"
	xmlns="http://www.hive.pt" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<domain_entities>
		<domain_entity><!-- User -->
			<name>User</name>
			<table>users</table>
			<internal_entity>user</internal_entity>
			<attributes>
				<attribute><!-- id -->
					<name>id</name>
					<type>Integer</type>
					<primary_key>true</primary_key>
				</attribute>
				<attribute><!-- username -->
					<name>username</name>
					<internal_attribute>id</internal_attribute>
					<type>String(255)</type>
				</attribute>
				<attribute><!-- password -->
					<name>password</name>
					<internal_attribute>password</internal_attribute>
					<type>String(255)</type>
				</attribute>
				<attribute><!-- passwordMd5 -->
					<name>passwordMd5</name>
					<internal_attribute>password</internal_attribute>
					<type>String(255)</type>
					<handlers>
						<handler>
							<name>domain_attribute_handler_value_to_md5</name>
						</handler>
					</handlers>
				</attribute>
			</attributes>
		</domain_entity>
	</domain_entities>
</output_configuration>