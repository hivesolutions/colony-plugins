<output_configuration xsi:schemaLocation="http://www.hive.pt ../output_configuration.xsd"
	xmlns="http://www.hive.pt" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<domain_entities>
		<domain_entity><!-- Supplier -->
			<name>Supplier</name> 
			<parent>Company</parent>
			<table>suppliers</table>
			<internal_entity>supplier</internal_entity>
			<attributes>
				<attribute><!-- id -->
					<name>id</name>
					<type>Integer</type>
					<primary_key>true</primary_key>
					<referenced_domain_entity>
						<name>Company</name>
						<multiplicity>one-to-one</multiplicity>
					</referenced_domain_entity>
				</attribute>
				<attribute><!-- id -->
					<name>name</name>
					<internal_attribute>name</internal_attribute>
					<type>String(255)</type>
				</attribute>			
			</attributes>
		</domain_entity>
	</domain_entities>
</output_configuration>