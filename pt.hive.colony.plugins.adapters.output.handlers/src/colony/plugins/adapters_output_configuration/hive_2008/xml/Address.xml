<output_configuration xsi:schemaLocation="http://www.hive.pt ../output_configuration.xsd"
	xmlns="http://www.hive.pt" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<domain_entities>
		<domain_entity><!-- Address -->
			<name>Address</name>
			<table>addresses</table>
			<internal_entity>address</internal_entity>
			<attributes>
				<attribute><!-- id -->
					<name>id</name>
					<type>Integer</type>
					<primary_key>true</primary_key>
				</attribute>
				<attribute><!-- country -->
					<name>country</name>
					<internal_attribute>country</internal_attribute>
					<type>String(255)</type>
					<handlers>
						<handler>
							<name>domain_attribute_handler_country</name>
						</handler>
					</handlers>
				</attribute>
				<attribute><!-- district -->
					<name>district</name>
					<internal_attribute>district</internal_attribute>
					<type>String(255)</type>
				</attribute>
				<attribute><!-- city -->
					<name>city</name>
					<internal_attribute>city</internal_attribute>
					<type>String(255)</type>
				</attribute>
				<attribute><!-- address -->
					<name>address</name>
					<internal_attribute>address</internal_attribute>
					<type>String(255)</type>
				</attribute>
				<attribute><!-- zipCode -->
					<name>zipCode</name>
					<internal_attribute>zipCode</internal_attribute>
					<type>String(255)</type>
				</attribute>
				<attribute><!-- person -->
					<name>person</name>
					<internal_attribute>customer</internal_attribute>
					<type>Integer</type>
					<referenced_domain_entity>
						<name>Person</name>
						<multiplicity>one-to-one</multiplicity>
					</referenced_domain_entity>
				</attribute>
				<attribute><!-- supplier -->
					<name>company</name>
					<internal_attribute>supplier</internal_attribute>
					<type>Integer</type>
					<referenced_domain_entity>
						<name>Company</name>
						<multiplicity>one-to-one</multiplicity>
					</referenced_domain_entity>
				</attribute>
			</attributes>
		</domain_entity>
	</domain_entities>
</output_configuration>