<output_configuration xsi:schemaLocation="http://www.hive.pt ../output_configuration.xsd"
	xmlns="http://www.hive.pt" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<domain_entities>
		<domain_entity><!-- Person -->
			<name>Person</name>
			<table>persons</table>
			<attributes>
				<attribute><!-- id -->
					<name>id</name>
					<type>Integer</type>
					<primary_key>true</primary_key>
				</attribute>
				<attribute><!-- name -->
					<name>name</name>
					<internal_attribute>name</internal_attribute>
					<type>String(255)</type>
					<handlers>
						<handler>
							<name>domain_attribute_handler_name</name>
						</handler>
					</handlers>
				</attribute>
				<attribute><!-- title -->
					<name>title</name>
					<internal_attribute>title</internal_attribute>
					<type>String(255)</type>
				</attribute>
				<attribute><!-- idCardNumber -->
					<name>idCardNumber</name>
					<internal_attribute>idCardNumber</internal_attribute>
					<type>String(255)</type>
				</attribute>
				<attribute><!-- taxNumber -->
					<name>taxNumber</name>
					<internal_attribute>taxNumber</internal_attribute>
					<type>String(255)</type>
				</attribute>
				<attribute><!-- bankAccountNumber -->
					<name>bankAccountNumber</name>
					<internal_attribute>bankAccountNumber</internal_attribute>
					<type>String(255)</type>
				</attribute>
				<attribute><!-- gender -->
					<name>gender</name>
					<internal_attribute>gender</internal_attribute>
					<type>String(255)</type>
				</attribute>
			</attributes>
		</domain_entity>
	</domain_entities>
</output_configuration>