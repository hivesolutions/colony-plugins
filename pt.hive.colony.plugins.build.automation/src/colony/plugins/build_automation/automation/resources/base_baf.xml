<build_automation xmlns="http://www.hive.pt"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.hive.pt xsd/baf.xsd">
    <artifact>
        <id>pt.hive.colony.plugins.build.automation.base</id>
        <version>1.0.0</version>
        <type>colony</type>
        <name>The base build automation file (baf)</name>
        <description>The parent build automation file (baf)</description>
        <url>http://www.hive.pt</url>
    </artifact>
    <build>
        <default_stage>build</default_stage>
        <execution_directory>.</execution_directory>
        <target_directory>target</target_directory>
        <classes_directory>target/classes</classes_directory>
        <plugins_directory>target/plugins</plugins_directory>
        <documentation_directory>target/documentation</documentation_directory>
        <repository_directory>target/repository</repository_directory>
        <resources_directory>target/resources</resources_directory>
        <source_directory>src</source_directory>
        <final_name>${build_automation.artifact.id}-${build_automation.artifact.version}</final_name>
        <clean_target_directory>false</clean_target_directory>
        <dependencies>
            <dependency>
                <id>pt.hive.colony.plugins.build.automation</id>
                <version>1.0.0</version>
                <run>false</run>
                <scope>all</scope>
            </dependency>
        </dependencies>
        <plugins>
            <plugin>
                <id>pt.hive.colony.plugins.build.automation.extensions.test</id>
                <version>1.0.0</version>
                <stage>test</stage>
                <configuration>
                    <default_test>true</default_test>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>default-profile</id>
            <activation>
                <property>
                    <name>perform_release</name>
                    <value>true</value>
                </property>
            </activation>
            <build></build>
        </profile>
    </profiles>
</build_automation>
