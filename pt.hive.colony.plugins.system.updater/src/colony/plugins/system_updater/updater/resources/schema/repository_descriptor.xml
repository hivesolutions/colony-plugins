<repository xmlns="http://www.hive.pt"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.hive.pt ../xsd/repository_descriptor.xsd">
    <name>Main Repository</name>
    <description>Description</description>
    <layout>simple</layout>
    <packages>
        <package>
            <name></name>
            <type></type>
            <id></id>
            <version></version>
            <plugins>
                <plugin>
                    <id></id>
                    <version></version>
                </plugin>
            </plugins>
        </package>
    </packages>
    <plugins>
        <plugin>
            <name></name>
            <type></type>
            <id></id>
            <version></version>
            <main_module></main_module>
            <main_class></main_class>
            <file_name></file_name>
            <contents_file></contents_file>
        </plugin>
    </plugins>
</repository>
