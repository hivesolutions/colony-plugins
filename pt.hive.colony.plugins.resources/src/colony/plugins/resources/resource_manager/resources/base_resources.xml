<resources xmlns="http://www.hive.pt"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.hive.pt xsd/resources.xsd">

	<!-- General configuration -->
	<resource>
		<namespace>system.path</namespace>
		<name>workspace_home</name>
		<type>string</type>
		<data>${WORKSPACE_HOME}</data>
	</resource>
	<resource>
		<namespace>system.path</namespace>
		<name>user_home</name>
		<type>string</type>
		<data>${HOME}</data>
	</resource>
	<resource>
		<namespace>system.path</namespace>
		<name>izpack_home</name>
		<type>string</type>
		<data>C:/Applications/IzPack/bin</data>
	</resource>

	<!-- Distribution registry server management -->
	<resource>
		<namespace>pt.hive.colony.plugins.distribution.registry_server</namespace>
		<name>registry_type</name>
		<type>string</type>
		<!-- can assume: master, slave or client -->
		<data>master</data>
	</resource>
	<resource>
		<namespace>pt.hive.colony.plugins.distribution.registry_server</namespace>
		<name>registry_hostname</name>
		<type>string</type>
		<data>localhost</data>
	</resource>
	<resource>
		<namespace>pt.hive.colony.plugins.distribution.registry_server</namespace>
		<name>registry_port</name>
		<type>integer</type>
		<data>80</data>
	</resource>
	<resource>
		<namespace>pt.hive.colony.plugins.distribution.registry_server</namespace>
		<name>endpoint_type</name>
		<type>string</type>
		<data>xmlrpc</data>
	</resource>
	<!-- Extra configuration options -->
	<resource>
		<namespace>pt.hive.colony.plugins.distribution.registry_server</namespace>
		<name>handler_base_filename</name>
		<type>string</type>
		<data>colony_mod_python/xmlrpc</data>
	</resource>
	<resource>
		<namespace>pt.hive.colony.plugins.distribution.registry_server</namespace>
		<name>handler_extension</name>
		<type>string</type>
		<data>py</data>
	</resource>

