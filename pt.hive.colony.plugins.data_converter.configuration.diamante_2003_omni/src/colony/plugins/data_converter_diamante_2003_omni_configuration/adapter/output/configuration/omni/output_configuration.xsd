<xsd:schema targetNamespace="http://www.hive.pt" elementFormDefault="qualified" xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	xmlns="http://www.hive.pt">
	<xsd:complexType name="output_configuration">
		<xsd:sequence>
			<xsd:element name="domain_entities" type="domain_entities" maxOccurs="1" minOccurs="1" />
		</xsd:sequence>
	</xsd:complexType>
	<xsd:complexType name="domain_entities">
		<xsd:sequence>
			<xsd:element name="domain_entity" type="domain_entity" maxOccurs="unbounded" minOccurs="1" />
		</xsd:sequence>
	</xsd:complexType>
	<xsd:complexType name="domain_entity">
		<xsd:sequence>
			<xsd:element name="name" type="xsd:string" maxOccurs="1" minOccurs="1" />
			<xsd:element name="parent" type="xsd:string" maxOccurs="1" minOccurs="0" />
			<xsd:element name="table" type="xsd:string" maxOccurs="1" minOccurs="1" />
			<xsd:element name="internal_entity" type="xsd:string" maxOccurs="1" minOccurs="0" />
			<xsd:element name="attributes" type="attributes" maxOccurs="1" minOccurs="1" />
		</xsd:sequence>
	</xsd:complexType>
	<xsd:complexType name="attributes">
		<xsd:sequence>
			<xsd:element name="attribute" type="attribute" maxOccurs="unbounded" minOccurs="1" />
		</xsd:sequence>
	</xsd:complexType>
	<xsd:complexType name="attribute">
		<xsd:sequence>
			<xsd:element name="name" type="xsd:string" maxOccurs="1" minOccurs="1" />
			<xsd:element name="internal_attribute" type="xsd:string" maxOccurs="1" minOccurs="0" />
			<xsd:element name="type" maxOccurs="1" minOccurs="1" type="variable_type" />
            <xsd:element name="primary_key" type="xsd:boolean" maxOccurs="1" minOccurs="0"></xsd:element>
            <xsd:element name="handlers" type="handlers" maxOccurs="unbounded" minOccurs="0" />
			<xsd:element name="referenced_domain_entity" type="referenced_domain_entity" maxOccurs="unbounded" minOccurs="0" />
		</xsd:sequence>
	</xsd:complexType>
	<xsd:complexType name="handlers">
		<xsd:sequence>
			<xsd:element name="handler" type="handler" maxOccurs="unbounded" minOccurs="1" />
		</xsd:sequence>
	</xsd:complexType>
	<xsd:complexType name="handler">
		<xsd:sequence>
			<xsd:element name="name" type="xsd:string" maxOccurs="1" minOccurs="1" />
		</xsd:sequence>
	</xsd:complexType>
	<xsd:complexType name="referenced_domain_entity">
		<xsd:sequence>
			<xsd:element name="name" type="xsd:string" maxOccurs="1" minOccurs="1" />
			<xsd:element name="multiplicity" type="multiplicity" maxOccurs="1" minOccurs="1" />
		</xsd:sequence>
	</xsd:complexType>
	<xsd:simpleType name="multiplicity">
		<xsd:restriction base="xsd:string">
			<xsd:enumeration value="one-to-one" />
			<xsd:enumeration value="one-to-many" />
			<xsd:enumeration value="many-to-many" />
		</xsd:restriction>
	</xsd:simpleType>
	<xsd:element name="output_configuration" type="output_configuration" />
	<xsd:simpleType name="variable_type">
		<xsd:restriction base="xsd:string">
			<xsd:whiteSpace value="collapse" />
			<xsd:pattern value="String\(\d+\)" />
			<xsd:pattern value="Integer" />
			<xsd:pattern value="Date" />
		</xsd:restriction>
	</xsd:simpleType>
</xsd:schema>