<input_configuration xsi:schemaLocation="http://www.hive.pt ../input_configuration.xsd" xmlns="http://www.hive.pt" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<tables>
		<table> <!-- tipopaga -->
			<name>tipopaga</name>
			<internal_entity>payment_terms</internal_entity>
			<primary_key>
				<primary_key_column>codigo</primary_key_column>
			</primary_key>
			
			<columns>
				<column> <!-- codigo -->
					<name>codigo</name>
					<internal_attribute>id</internal_attribute>
				</column>
				
				<column> <!-- descricao -->
					<name>descricao</name>
					<internal_attribute>name</internal_attribute>
					<handlers>
						<handler>
							<name>column_handler_string_to_lowercase</name>
						</handler>
					</handlers>
				</column>
				<column> <!-- desconto -->
					<name>desconto</name>
					<internal_attribute>discount</internal_attribute>
				</column>
				<column> <!-- dias -->
					<name>dias</name>
					<internal_attribute>duration_limit</internal_attribute>
				</column>
			</columns>
		</table>
	</tables>
</input_configuration>
