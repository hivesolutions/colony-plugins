<input_configuration xsi:schemaLocation="http://www.hive.pt ../input_configuration.xsd" xmlns="http://www.hive.pt" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<tables>
		<table> <!-- imagens -->
			<name>imagens</name>
			<internal_entity>media</internal_entity>
			<primary_key>
				<primary_key_column>codigo</primary_key_column>
				<primary_key_column>dirimagem</primary_key_column>
				<primary_key_column>anulado</primary_key_column>
			</primary_key>
			
			<foreign_keys>
				<foreign_key>
					<foreign_key_columns>
						<foreign_key_column>codigo</foreign_key_column>
					</foreign_key_columns>
					<foreign_table>produtos</foreign_table>
				</foreign_key>
			</foreign_keys>
			
			<columns>
				<column> <!-- codigo -->
					<name>codigo</name>
					<internal_attribute>id</internal_attribute>
				</column>
				
				<column> <!-- dirimagem -->
					<name>dirimagem</name>
					<internal_attribute>name</internal_attribute>
				</column>
				
				<column> <!-- anulado -->
					<name>anulado</name>
					<internal_attribute>status</internal_attribute>
					<handlers>
						<handler>
							<name>column_handler_diamante_anulado_to_hive_status</name>
						</handler>
					</handlers>
				</column>
			</columns>
		</table>
	</tables>
</input_configuration>
