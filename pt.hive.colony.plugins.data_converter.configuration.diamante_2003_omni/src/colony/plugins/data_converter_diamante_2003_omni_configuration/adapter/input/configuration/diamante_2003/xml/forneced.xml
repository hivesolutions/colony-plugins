<input_configuration xsi:schemaLocation="http://www.hive.pt ../input_configuration.xsd" xmlns="http://www.hive.pt" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<tables>
		<table> <!-- forneced -->
			<name>forneced</name>
			<internal_entity>supplier</internal_entity>
			<primary_key>
				<primary_key_column>Codigo</primary_key_column>
			</primary_key>
			<foreign_keys>
				<foreign_key>
					<foreign_key_columns>
						<foreign_key_column>Pais</foreign_key_column>
					</foreign_key_columns>
					<foreign_table>paises</foreign_table>
				</foreign_key>
			</foreign_keys>
			<columns>
				<column> <!-- Codigo -->
					<name>Codigo</name>
					<internal_attribute>code</internal_attribute>
				</column>
				<column> <!-- Sobrenome -->
					<name>Sobrenome</name>
					<internal_attribute>surname</internal_attribute>
					<handlers>
						<handler>
							<name>column_handler_string_to_lowercase</name>
						</handler>
					</handlers>
				</column>
				<column> <!-- Nome -->
					<name>Nome</name>
					<internal_attribute>name</internal_attribute>
					<handlers>
						<handler>
							<name>column_handler_string_to_lowercase</name>
						</handler>
					</handlers>
				</column>
				<column> <!-- Morada -->
					<name>Morada</name>
					<internal_attribute>address</internal_attribute>
					<internal_entity>
						<id>1</id>
						<name>address</name>
					</internal_entity>
					<handlers>
						<handler>
							<name>column_handler_string_to_lowercase</name>
						</handler>
					</handlers>
				</column>
				<column> <!-- Tel1 -->
					<name>Tel1</name>
					<internal_attribute>telephone</internal_attribute>
					<internal_entity>
						<id>1</id>
						<name>contact_information</name>
					</internal_entity>
				</column>
				<column> <!-- Tel2 -->
					<name>Tel2</name>
					<internal_attribute>telephone</internal_attribute>
					<internal_entity>
						<id>2</id>
						<name>contact_information</name>
					</internal_entity>
				</column>
				<column> <!-- Tel3 -->
					<name>Tel3</name>
					<internal_attribute>telephone</internal_attribute>
					<internal_entity>
						<id>3</id>
						<name>contact_information</name>
					</internal_entity>
				</column>
				<column> <!-- Movel -->
					<name>Movel</name>
					<internal_attribute>mobilePhone</internal_attribute>
					<internal_entity>
						<id>1</id>
						<name>contact_information</name>
					</internal_entity>
				</column>
				<column> <!-- Fax -->
					<name>Fax</name>
					<internal_attribute>fax</internal_attribute>
					<internal_entity>
						<id>1</id>
						<name>contact_information</name>
					</internal_entity>
				</column>
				<column> <!-- Email -->
					<name>Email</name>
					<internal_attribute>email</internal_attribute>
					<internal_entity>
						<id>1</id>
						<name>contact_information</name>
					</internal_entity>
					<handlers>
						<handler>
							<name>column_handler_string_to_lowercase</name>
						</handler>
					</handlers>
				</column>
				<column> <!-- Url -->
					<name>Url</name>
					<internal_attribute>webPageUrl</internal_attribute>
					<internal_entity>
						<id>1</id>
						<name>contact_information</name>
					</internal_entity>
					<handlers>
						<handler>
							<name>column_handler_string_to_lowercase</name>
						</handler>
					</handlers>
				</column>
				<column> <!-- Localidad -->
					<name>Localidad</name>
					<internal_attribute>location</internal_attribute>
					<internal_entity>
						<id>1</id>
						<name>address</name>
					</internal_entity>					
					<handlers>
						<handler>
							<name>column_handler_string_to_lowercase</name>
						</handler>
					</handlers>
				</column>
				<column> <!-- Codpos -->
					<name>Codpos</name>
					<internal_attribute>zipCode</internal_attribute>
					<internal_entity>
						<id>1</id>
						<name>address</name>
					</internal_entity>
				</column>
				<column> <!-- Pais -->
					<name>Pais</name>
					<internal_attribute>country</internal_attribute>
					<internal_entity>
						<id>1</id>
						<name>address</name>
					</internal_entity>
				</column>
				<column> <!-- Apontament -->
					<name>Apontament</name>
					<internal_attribute>notes</internal_attribute>
				</column>
			</columns>
		</table>
	</tables>
</input_configuration>
